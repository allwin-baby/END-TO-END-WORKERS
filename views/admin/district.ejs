    <div style="margin-left:15%;padding:1px 16px;height:1000px;">
        <main id="site-main">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>City</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="tbody">
                    <% for(var i=0; i < dist.length; i++) { %>
                        <tr >
                            <td class="dist_name">
                                <%= dist[i].district %>
                            </td>
                            <td>
                                <a href ="/admin/dist/delete?id=<%= dist[i]._id%>"class="btn border-shadow delete">
                                    <!-- check assets/index.js -->
                                    <span class="text-gradient"><i class="fas fa-times"></i></span>
                                </a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
            <br/>
            <br/>
            <br/>
            <form  method="POST" action = "/admin/dist"id="form"   style="display: inline;">
                <label for="dist">City</label>
                <input type="text" name="district" required>
                <button type="submit">Add</button>
            </form>
            <div id="dist_list">
            </div>
    </div>
</body>
